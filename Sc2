<script>
gsap.registerPlugin(ScrollTrigger);

/* ─────────────────────────────────────────
   SCROLL BUDGET
   #page = 1200vh total

   Scene 1: scrollY   0px  →  4 * window.innerHeight px
   Scene 2: scrollY   4vh  →  8 * window.innerHeight px
   Scene 3: scrollY   8vh  → 12 * window.innerHeight px

   Simple rule: multiply scene number by window.innerHeight
   to get the pixel boundary. No fractions, no percentages.
───────────────────────────────────────── */
const scene1 = document.getElementById('scene1');
const scene2 = document.getElementById('scene2');
const scene3 = document.getElementById('scene3');
const video  = document.getElementById('scene2-video');
const pbar   = document.getElementById('s2-progress-bar');

let s3Entered = false; /* GSAP switch entrance fires once */

function manageScenes() {
  const sy  = window.scrollY;
  const wh  = window.innerHeight; /* 1vh in pixels */

  /* Boundaries in real pixels — dead simple */
  const s1End  = 4  * wh;   /*  400vh */
  const s2End  = 8  * wh;   /*  800vh */
  const s3End  = 12 * wh;   /* 1200vh */

  /* ── SCENE 1 ───────────────────────────
     translateY(0)     → covering screen
     translateY(-100%) → slid above screen
  ──────────────────────────────────────── */
  if (sy < s1End) {
    scene1.style.transform = 'translateY(0)';
  } else {
    scene1.style.transform = 'translateY(-100%)';
  }

  /* ── SCENE 2 ───────────────────────────
     translateY(100%)  → waiting below screen
     translateY(0)     → covering screen
     translateY(-100%) → slid above screen
  ──────────────────────────────────────── */
  if (sy < s1End) {
    /* waiting — hidden below */
    scene2.style.transform = 'translateY(100%)';
  } else if (sy >= s1End && sy < s2End) {
    /* active */
    scene2.style.transform = 'translateY(0)';

    /* scrub video with scroll */
    if (video.readyState >= 2 && video.duration) {
      const progress    = (sy - s1End) / (s2End - s1End); /* 0 → 1 */
      const clamped     = Math.min(Math.max(progress, 0), 1);
      video.currentTime = clamped * video.duration;
      pbar.style.width  = (clamped * 100) + '%';
    }
  } else {
    /* past — slid above */
    scene2.style.transform = 'translateY(-100%)';
  }

  /* ── SCENE 3 ───────────────────────────
     translateY(100%)  → waiting below screen
     translateY(0)     → covering screen
     translateY(-100%) → slid above screen
  ──────────────────────────────────────── */
  if (sy < s2End) {
    /* waiting — hidden below */
    scene3.style.transform = 'translateY(100%)';
  } else if (sy >= s2End && sy < s3End) {
    /* active */
    scene3.style.transform = 'translateY(0)';

    /* GSAP switch entrance — fires once per page load */
    if (!s3Entered) {
      s3Entered = true;
      gsap.fromTo('#s3-switch-wrap',
        { opacity: 0, scale: 0.5, y: -24, visibility: 'visible' },
        { opacity: 1, scale: 1,   y: 0,
          duration: 0.9, ease: 'back.out(1.7)', delay: 0.35 }
      );
    }
  } else {
    /* past — slid above */
    scene3.style.transform = 'translateY(-100%)';
  }
}

/* ─────────────────────────────────────────
   GSAP SCROLL ANIMATIONS
   All use #page as trigger.
   % values map to the 1200vh total height.

   Scene 1 range: 0% – 33.3%  (0 – 400vh)
   Scene 2 range: 33.3% – 66.6% (400 – 800vh)
   Scene 3 range: 66.6% – 100%  (800 – 1200vh)
───────────────────────────────────────── */

/* show panel 1 immediately */
gsap.set('#s1p1', { opacity: 1, y: 0 });

/* header out */
gsap.to('#site-header', {
  yPercent: -115,
  scrollTrigger: {
    trigger: '#page', start: '0.5% top', end: '2% top', scrub: 0.8
  }
});

/* scroll hint out */
gsap.to('#scroll-hint', {
  autoAlpha: 0,
  scrollTrigger: {
    trigger: '#page', start: '0.5% top', end: '1.5% top', scrub: true
  }
});

/* S1 — panel 1 out */
gsap.to('#s1p1', {
  opacity: 0, y: -46,
  scrollTrigger: {
    trigger: '#page', start: '5% top', end: '11% top', scrub: 1
  }
});

/* S1 — panel 2 in */
gsap.fromTo('#s1p2',
  { opacity: 0, y: 52 },
  { opacity: 1, y: 0,
    scrollTrigger: {
      trigger: '#page', start: '10% top', end: '17% top', scrub: 1
    }
  }
);

/* S1 — panel 2 out */
gsap.to('#s1p2', {
  opacity: 0, y: -46,
  scrollTrigger: {
    trigger: '#page', start: '19% top', end: '25% top', scrub: 1
  }
});

/* S1 — banner slides up and fades as scene2 takes over */
gsap.to('#s1-banner', {
  yPercent: -20, scale: 0.93,
  scrollTrigger: {
    trigger: '#page', start: '26% top', end: '33% top', scrub: 1.2
  }
});
gsap.to('#scene1', {
  autoAlpha: 0,
  scrollTrigger: {
    trigger: '#page', start: '30% top', end: '33% top', scrub: 1
  }
});

/* S2 — panel A in/out  (38% – 52%) */
gsap.fromTo('#s2p1',
  { opacity: 0, y: 48 },
  { opacity: 1, y: 0,
    scrollTrigger: {
      trigger: '#page', start: '36% top', end: '43% top', scrub: 1
    }
  }
);
gsap.to('#s2p1', {
  opacity: 0, y: -46,
  scrollTrigger: {
    trigger: '#page', start: '45% top', end: '51% top', scrub: 1
  }
});

/* S2 — panel B in/out  (53% – 66%) */
gsap.fromTo('#s2p2',
  { opacity: 0, y: 48 },
  { opacity: 1, y: 0,
    scrollTrigger: {
      trigger: '#page', start: '53% top', end: '59% top', scrub: 1
    }
  }
);
gsap.to('#s2p2', {
  opacity: 0, y: -46,
  scrollTrigger: {
    trigger: '#page', start: '61% top', end: '66% top', scrub: 1
  }
});

/* ─────────────────────────────────────────
   SCENE 3 — LIGHT / DARK TOGGLE
───────────────────────────────────────── */
const s3Switch     = document.getElementById('s3-switch');
const s3DarkVeil   = document.getElementById('s3-dark-veil');
const s3LabelLight = document.getElementById('s3-label-light');
const s3LabelDark  = document.getElementById('s3-label-dark');
let isDark = false;

s3LabelLight.classList.add('is-active');

function toggleLightDark() {
  isDark = !isDark;
  s3DarkVeil.classList.toggle('is-dark', isDark);
  s3Switch.classList.toggle('is-dark', isDark);
  s3Switch.setAttribute('aria-checked', String(isDark));
  s3LabelLight.classList.toggle('is-active', !isDark);
  s3LabelDark.classList.toggle('is-active',   isDark);
  /* tactile bounce */
  gsap.fromTo('#s3-switch-wrap',
    { scale: 0.92 },
    { scale: 1, duration: 0.35, ease: 'back.out(2)' }
  );
}

s3Switch.addEventListener('click', toggleLightDark);
s3Switch.addEventListener('keydown', e => {
  if (e.key === ' ' || e.key === 'Enter') {
    e.preventDefault();
    toggleLightDark();
  }
});

/* ─────────────────────────────────────────
   BIND EVENTS
───────────────────────────────────────── */
window.addEventListener('scroll',  manageScenes, { passive: true });
window.addEventListener('resize',  () => { ScrollTrigger.refresh(); manageScenes(); });
manageScenes(); /* run once on page load */
</script>
</body>
</html>
