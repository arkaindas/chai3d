  }

  /* ══════════════════════════════════
     SCENE 3 — image light/dark

     .s3-inner uses padding-bottom % to
     lock the aspect ratio of the image box.
     Switch % coords are relative to this box
     so they stay on the same visual spot at
     every screen width.

     padding-bottom values:
       56.25% = 16:9
       66.67% = 3:2
       75%    = 4:3
  ══════════════════════════════════ */
  .s3-inner {
    position: absolute;
    top: 50%; left: 0;
    width: 100%;
    transform: translateY(-50%);
    padding-bottom: 56.25%; /* 16:9 — change to match your image */
  }

  .s3-img {
    position: absolute; inset: 0;
    width: 100%; height: 100%;
    object-fit: cover; object-position: center;
    display: block;
  }

  .s3-dark-veil {
    position: absolute; inset: 0;
    background: linear-gradient(135deg,
      rgba(6,5,8,.80) 0%, rgba(15,22,50,.72) 100%);
    opacity: 0;
    transition: opacity 1.1s ease;
    z-index: 1; pointer-events: none;
  }

  .s3-dark-veil.is-dark { opacity: 1; }

  /* Switch — % positions relative to .s3-inner */
  .s3-switch-wrap {
    position: absolute;
    left: var(--switch-left, 72%);
    top:  var(--switch-top,  38%);
    transform: translate(-50%, -50%);
    z-index: 10;
    display: flex; align-items: center;
    gap: clamp(.4rem, 1.2vw, .8rem);
    background: rgba(20,18,16,.48);
    border: 1px solid rgba(247,243,236,.18);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 999px;
    padding: clamp(.35rem,.8vw,.6rem) clamp(.6rem,1.5vw,1rem);
    white-space: nowrap;
    /* hidden until GSAP entrance */
    opacity: 0; visibility: hidden;
  }

  .s3-switch-label {
    font-family: 'Jost', sans-serif;
    font-size: clamp(.5rem, 1vw, .68rem);
    font-weight: 300; letter-spacing: .35em;
    text-transform: uppercase;
    color: rgba(247,243,236,.45);
    transition: color .4s ease;
    user-select: none;
  }

  .s3-switch-label.is-active { color: var(--gold); }

  .s3-switch {
    background: none; border: none; padding: 0;
    cursor: pointer; outline: none;
    -webkit-tap-highlight-color: transparent;
  }

  .s3-switch:focus-visible .s3-switch__track {
    box-shadow: 0 0 0 3px rgba(184,150,90,.55);
  }

  .s3-switch__track {
    display: block; position: relative;
    width: clamp(34px, 4.5vw, 50px);
    height: clamp(19px, 2.6vw, 27px);
    border-radius: 999px;
    background: rgba(247,243,236,.18);
    border: 1px solid rgba(247,243,236,.22);
    transition: background .4s ease, border-color .4s ease;
    cursor: pointer;
  }

  .s3-switch__thumb {
    position: absolute; top: 50%; left: 3px;
    transform: translateY(-50%);
    width: clamp(13px,1.9vw,19px);
    height: clamp(13px,1.9vw,19px);
    border-radius: 50%; background: var(--cream);
    box-shadow: 0 1px 5px rgba(0,0,0,.45);
    transition: left .4s cubic-bezier(.4,0,.2,1),
                background .4s ease, width .15s ease;
  }

  .s3-switch.is-dark .s3-switch__track {
