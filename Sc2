<script>
gsap.registerPlugin(ScrollTrigger);

/* ─────────────────────────────────────────
   SCROLL BUDGET  (#page = 1200vh)
   ┌─────────────────────────────────────┐
   │  S1:    0  –  400vh   (0%  – 33%)  │
   │  S2:  400  –  800vh   (33% – 66%)  │
   │  S3:  800  – 1200vh   (66% – 100%) │
   └─────────────────────────────────────┘
───────────────────────────────────────── */
const VH        = () => window.innerHeight;
const S1_END    = 400;   /* vh units */
const S2_START  = 400;
const S2_END    = 800;
const S3_START  = 800;
const S3_END    = 1200;

/* elements */
const scene1      = document.getElementById('scene1');
const scene2      = document.getElementById('scene2');
const scene3      = document.getElementById('scene3');
const video       = document.getElementById('scene2-video');
const progressBar = document.getElementById('s2-progress-bar');

/* ─────────────────────────────────────────
   SCENE MANAGER
   Called on every scroll event.
   Each scene is either:
     position:fixed  → visible, covering screen
     position:absolute + correct top → parked off-screen
   No gaps because #page fills with its own height.
───────────────────────────────────────── */
let s3SwitchShown = false;

function manageScenes() {
  const sy      = window.scrollY;
  const vhPx    = VH();
  const s1EndPx = S1_END  * vhPx / 100 * 100; /* 400vh in px */
  const s2StPx  = S2_START * vhPx / 100 * 100; /* 400vh in px */
  const s2EndPx = S2_END  * vhPx / 100 * 100; /* 800vh in px */
  const s3StPx  = S3_START * vhPx / 100 * 100; /* 800vh in px */
  const s3EndPx = S3_END  * vhPx / 100 * 100; /* 1200vh in px */

  /* ── SCENE 1 ──────────────────────────
     Active:   sy < s1EndPx
     Parked:   sy >= s1EndPx  (pushed above viewport)
  ──────────────────────────────────────*/
  if (sy < s1EndPx) {
    scene1.style.position = 'fixed';
    scene1.style.top      = '0';
  } else {
    scene1.style.position = 'absolute';
    scene1.style.top      = '0';          /* sits at document top, behind scrolled page */
    scene1.style.transform = 'translateY(-100vh)'; /* hide above screen */
  }

  /* ── SCENE 2 ──────────────────────────
     Before:   parked below scene1 exit
     Active:   fixed to screen
     After:    parked, held at its end
  ──────────────────────────────────────*/
  if (sy < s2StPx) {
    /* not yet — sit right where scene1 ends */
    scene2.style.position  = 'fixed';
    scene2.style.top       = '0';
    scene2.style.transform = 'translateY(100vh)'; /* just off bottom */
  } else if (sy >= s2StPx && sy < s2EndPx) {
    /* active */
    scene2.style.position  = 'fixed';
    scene2.style.top       = '0';
    scene2.style.transform = 'translateY(0)';

    /* scrub video */
    if (video.readyState >= 2 && video.duration) {
      const p           = (sy - s2StPx) / (s2EndPx - s2StPx);
      const cp          = Math.min(Math.max(p, 0), 1);
      video.currentTime = cp * video.duration;
      progressBar.style.width = (cp * 100) + '%';
    }
  } else {
    /* past — push above screen */
    scene2.style.position  = 'absolute';
    scene2.style.top       = '0';
    scene2.style.transform = 'translateY(-100vh)';
    if (video.readyState >= 2 && video.duration) {
      video.currentTime = video.duration;
      progressBar.style.width = '100%';
    }
  }

  /* ── SCENE 3 ──────────────────────────
     Before:   parked off bottom
     Active:   fixed to screen
     After:    parked off top (page ends)
  ──────────────────────────────────────*/
  if (sy < s3StPx) {
    scene3.style.position  = 'fixed';
    scene3.style.top       = '0';
    scene3.style.transform = 'translateY(100vh)';
  } else if (sy >= s3StPx && sy < s3EndPx) {
    scene3.style.position  = 'fixed';
    scene3.style.top       = '0';
    scene3.style.transform = 'translateY(0)';

    /* GSAP switch entrance — fires once */
    if (!s3SwitchShown) {
      s3SwitchShown = true;
      gsap.fromTo('#s3-switch-wrap',
        { opacity: 0, scale: 0.5, y: -24, visibility: 'visible' },
        { opacity: 1, scale: 1,   y: 0,
          duration: 0.9, ease: 'back.out(1.7)', delay: 0.35 }
      );
    }
  } else {
    scene3.style.position  = 'fixed';
    scene3.style.top       = '0';
    scene3.style.transform = 'translateY(-100vh)';
  }
}

/* ─────────────────────────────────────────
   GSAP SCROLL ANIMATIONS  (% of 1200vh)

   S1 panel 1 out  :  5% –  12%
   S1 panel 2 in   : 11% –  18%
   S1 panel 2 out  : 20% –  26%
   S1 banner exit  : 26% –  33%

   S2 panel A in   : 36% –  44%
   S2 panel A out  : 46% –  53%
   S2 panel B in   : 55% –  61%
   S2 panel B out  : 62% –  66%
───────────────────────────────────────── */
gsap.set('#s1p1', { opacity: 1, y: 0 });

/* header */
gsap.to('#site-header', {
  yPercent: -115,
  scrollTrigger: { trigger: '#page', start: '1% top', end: '3% top', scrub: 0.8 }
});
gsap.to('#scroll-hint', {
  autoAlpha: 0,
  scrollTrigger: { trigger: '#page', start: '1% top', end: '2.5% top', scrub: true }
});

/* S1 panels */
gsap.to('#s1p1', {
  opacity: 0, y: -46,
  scrollTrigger: { trigger: '#page', start: '5% top', end: '12% top', scrub: 1 }
});
gsap.fromTo('#s1p2',
  { opacity: 0, y: 52 },
  { opacity: 1, y: 0,
    scrollTrigger: { trigger: '#page', start: '11% top', end: '18% top', scrub: 1 } }
);
gsap.to('#s1p2', {
  opacity: 0, y: -46,
  scrollTrigger: { trigger: '#page', start: '20% top', end: '26% top', scrub: 1 }
});

/* S1 banner exit */
gsap.to('#s1-banner', {
  yPercent: -20, scale: 0.93,
  scrollTrigger: { trigger: '#page', start: '26% top', end: '33% top', scrub: 1.2 }
});
gsap.to('#scene1', {
  autoAlpha: 0,
  scrollTrigger: { trigger: '#page', start: '30% top', end: '33% top', scrub: 1 }
});

/* S2 panels */
gsap.fromTo('#s2p1',
  { opacity: 0, y: 48 },
  { opacity: 1, y: 0,
    scrollTrigger: { trigger: '#page', start: '36% top', end: '44% top', scrub: 1 } }
);
gsap.to('#s2p1', {
  opacity: 0, y: -46,
  scrollTrigger: { trigger: '#page', start: '46% top', end: '53% top', scrub: 1 }
});
gsap.fromTo('#s2p2',
  { opacity: 0, y: 48 },
  { opacity: 1, y: 0,
    scrollTrigger: { trigger: '#page', start: '55% top', end: '61% top', scrub: 1 } }
);
gsap.to('#s2p2', {
  opacity: 0, y: -46,
  scrollTrigger: { trigger: '#page', start: '62% top', end: '66% top', scrub: 1 }
});

/* ─────────────────────────────────────────
   SCENE 3 SWITCH TOGGLE
───────────────────────────────────────── */
const s3Switch     = document.getElementById('s3-switch');
const s3DarkVeil   = document.getElementById('s3-dark-veil');
const s3LabelLight = document.getElementById('s3-label-light');
const s3LabelDark  = document.getElementById('s3-label-dark');
let isDark = false;

s3LabelLight.classList.add('is-active');

function toggleLightDark() {
  isDark = !isDark;
  s3DarkVeil.classList.toggle('is-dark', isDark);
  s3Switch.classList.toggle('is-dark', isDark);
  s3Switch.setAttribute('aria-checked', String(isDark));
  s3LabelLight.classList.toggle('is-active', !isDark);
  s3LabelDark.classList.toggle('is-active',   isDark);
  gsap.fromTo('#s3-switch-wrap',
    { scale: 0.92 },
    { scale: 1, duration: 0.35, ease: 'back.out(2)' }
  );
}

s3Switch.addEventListener('click', toggleLightDark);
s3Switch.addEventListener('keydown', e => {
  if (e.key === ' ' || e.key === 'Enter') { e.preventDefault(); toggleLightDark(); }
});

/* ─────────────────────────────────────────
   BIND EVENTS
───────────────────────────────────────── */
window.addEventListener('scroll',  manageScenes, { passive: true });
window.addEventListener('resize',  () => { ScrollTrigger.refresh(); manageScenes(); });
manageScenes(); /* run once on load */
</script>
</body>
</html>
