  }

  /* ══════════════════════════════════
     SCENE 3 — light/dark image

     The image inside uses aspect-ratio
     padding trick so the switch % coords
     are always on the same visual spot.
  ══════════════════════════════════ */
  .s3-inner {
    /*
      This inner div matches the image's
      natural aspect ratio so % positions
      of the switch are always accurate.
      Change 56.25% for a different ratio:
        56.25% = 16:9
        66.67% = 3:2
        75%    = 4:3
    */
    position: absolute;
    top: 50%; left: 0;
    width: 100%;
    transform: translateY(-50%);
    /* padding-bottom creates the ratio height */
    padding-bottom: 56.25%;
  }

  .s3-img {
    position: absolute;
    inset: 0;
    width: 100%; height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .s3-dark-veil {
    position: absolute; inset: 0;
    background: linear-gradient(
      135deg,
      rgba(6,5,8,0.80) 0%,
      rgba(15,22,50,0.72) 100%
    );
    opacity: 0;
    transition: opacity 1.1s ease;
    z-index: 1;
    pointer-events: none;
  }

  .s3-dark-veil.is-dark { opacity: 1; }

  /*
    Switch sits inside .s3-inner so its
    left/top % are relative to the image box,
    not the full 100vh scene.
  */
  .s3-switch-wrap {
    position: absolute;
    left: var(--switch-left, 72%);
    top:  var(--switch-top,  38%);
    transform: translate(-50%, -50%);
    z-index: 10;
    display: flex;
    align-items: center;
    gap: clamp(0.4rem, 1.2vw, 0.8rem);
    background: rgba(20,18,16,0.48);
    border: 1px solid rgba(247,243,236,0.18);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 999px;
    padding: clamp(0.35rem, 0.8vw, 0.6rem) clamp(0.6rem, 1.5vw, 1rem);
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
  }

  .s3-switch-label {
    font-family: 'Jost', sans-serif;
    font-size: clamp(0.5rem, 1vw, 0.68rem);
    font-weight: 300;
    letter-spacing: 0.35em;
    text-transform: uppercase;
    color: rgba(247,243,236,0.45);
    transition: color 0.4s ease;
    user-select: none;
  }

  .s3-switch-label.is-active { color: var(--gold); }

  .s3-switch {
    background: none; border: none;
    padding: 0; cursor: pointer;
    outline: none;
    -webkit-tap-highlight-color: transparent;
  }

  .s3-switch:focus-visible .s3-switch__track {
    box-shadow: 0 0 0 3px rgba(184,150,90,0.55);
  }

  .s3-switch__track {
    display: block;
    position: relative;
    width: clamp(34px, 4.5vw, 50px);
    height: clamp(19px, 2.6vw, 27px);
    border-radius: 999px;
    background: rgba(247,243,236,0.18);
    border: 1px solid rgba(247,243,236,0.22);
    transition: background 0.4s ease, border-color 0.4s ease;
    cursor: pointer;
  }

  .s3-switch__thumb {
    position: absolute;
    top: 50%; left: 3px;
    transform: translateY(-50%);
    width: clamp(13px,1.9vw,19px);
    height: clamp(13px,1.9vw,19px);
    border-radius: 50%;
    background: var(--cream);
    box-shadow: 0 1px 5px rgba(0,0,0,0.45);
    transition:
      left      0.4s cubic-bezier(0.4,0,0.2,1),
      background 0.4s ease,
      width     0.15s ease;
  }

  .s3-switch.is-dark .s3-switch__track {
    background: rgba(80,110,180,0.38);
    border-color: rgba(100,140,210,0.5);
  }

  .s3-switch.is-dark .s3-switch__thumb {
    left: calc(100% - clamp(13px,1.9vw,19px) - 3px);
    background: #8aabdf;
  }

  .s3-switch:active .s3-switch__thumb {
    width: clamp(17px,2.4vw,24px);
  }

  /* ══════════════════════════════════
     MOBILE
  ══════════════════════════════════ */
  @media (max-width: 600px) {
    .s1-texts::before { display: none; }
    nav a:not(:first-child) { display: none; }

    /* On mobile the .s3-inner padding trick
       still keeps % coords correct */
    .s3-switch-wrap {
      left: clamp(15%, var(--switch-left,72%), 85%);
      top:  clamp(10%, var(--switch-top, 38%), 90%);
    }
  }
