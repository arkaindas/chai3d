<!-- ═══════════════════ GSAP ═══════════════════ -->
<script>
gsap.registerPlugin(ScrollTrigger);

/* ── initial states ── */
gsap.set('#s1p1', { opacity: 1, y: 0 });

/* ─────────────────────────────────
   HEADER — hide on scroll start
───────────────────────────────── */
gsap.to('#site-header', {
  yPercent: -115,
  ease: 'power2.inOut',
  scrollTrigger: {
    trigger: '#scene1',
    start: 'top+=90 top',
    end:   'top+=270 top',
    scrub: 0.9,
  }
});

gsap.to('#scroll-hint', {
  autoAlpha: 0,
  scrollTrigger: {
    trigger: '#scene1',
    start: 'top+=50 top',
    end:   'top+=150 top',
    scrub: true,
  }
});

/* ─────────────────────────────────
   SCENE 1 — Panel 1 out
───────────────────────────────── */
gsap.to('#s1p1', {
  opacity: 0, y: -46,
  ease: 'power2.in',
  scrollTrigger: {
    trigger: '#scene1',
    start: '18% top',
    end:   '32% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────
   SCENE 1 — Panel 2 in
───────────────────────────────── */
gsap.fromTo('#s1p2',
  { opacity: 0, y: 52 },
  {
    opacity: 1, y: 0,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '#scene1',
      start: '30% top',
      end:   '46% top',
      scrub: 1,
    }
  }
);

/* ─────────────────────────────────
   SCENE 1 — Panel 2 out
───────────────────────────────── */
gsap.to('#s1p2', {
  opacity: 0, y: -46,
  ease: 'power2.in',
  scrollTrigger: {
    trigger: '#scene1',
    start: '60% top',
    end:   '74% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────
   SCENE 1 — Banner exits upward
───────────────────────────────── */
gsap.to('#s1-banner', {
  yPercent: -20,
  scale: 0.93,
  ease: 'power2.inOut',
  scrollTrigger: {
    trigger: '#scene1',
    start: '76% top',
    end:   'bottom top',
    scrub: 1.4,
  }
});

gsap.to('#s1-sticky', {
  autoAlpha: 0,
  ease: 'power1.in',
  scrollTrigger: {
    trigger: '#scene1',
    start: '84% top',
    end:   'bottom top',
    scrub: 1,
  }
});

/* ─────────────────────────────────
   SCENE 2 — Video autoplay
───────────────────────────────── */
const vid = document.getElementById('scene2-video');

ScrollTrigger.create({
  trigger: '#scene2',
  start: 'top top',
  end:   'bottom top',
  onEnter:     () => { vid.currentTime = 0; vid.play().catch(() => {}); },
  onLeave:     () => vid.pause(),
  onEnterBack: () => vid.play().catch(() => {}),
  onLeaveBack: () => vid.pause(),
});

/* ─────────────────────────────────
   SCENE 2 — Panel A in
───────────────────────────────── */
gsap.fromTo('#s2p1',
  { opacity: 0, y: 48 },
  {
    opacity: 1, y: 0,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '#scene2',
      start: '8% top',
      end:   '24% top',
      scrub: 1,
    }
  }
);

/* ─────────────────────────────────
   SCENE 2 — Panel A out
───────────────────────────────── */
gsap.to('#s2p1', {
  opacity: 0, y: -46,
  ease: 'power2.in',
  scrollTrigger: {
    trigger: '#scene2',
    start: '34% top',
    end:   '48% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────
   SCENE 2 — Panel B in
───────────────────────────────── */
gsap.fromTo('#s2p2',
  { opacity: 0, y: 48 },
  {
    opacity: 1, y: 0,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '#scene2',
      start: '52% top',
      end:   '66% top',
      scrub: 1,
    }
  }
);

/* ─────────────────────────────────
   SCENE 2 — Panel B out
───────────────────────────────── */
gsap.to('#s2p2', {
  opacity: 0, y: -46,
  ease: 'power2.in',
  scrollTrigger: {
    trigger: '#scene2',
    start: '78% top',
    end:   '92% top',
    scrub: 1,
  }
});
</script>
</body>
</html>
