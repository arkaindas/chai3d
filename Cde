  <script type="module">
    import { SpinWheel } from './wheel.js';

    const wheel = new SpinWheel('wheel', {
      segments: [
        "Tip of the Day",
        "Trivia Time",
        "Myth Buster",
        "Test Your IQ",
        "Learn Something New",
        "Community Info"
      ],
      colors: ["#18c37a", "#ffffff"],
      onResult: (value) => {
        alert("ðŸŽ¯ Arrow points to: " + value);
      }
    });

    document.getElementById('spinBtn').addEventListener('click', () => wheel.spin());
