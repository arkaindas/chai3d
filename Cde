document.addEventListener("DOMContentLoaded", () => {
  const typeahead = document.querySelector(".typeahead-component");
  const input = typeahead.querySelector(".typeahead-input");
  const resultsList = typeahead.querySelector(".typeahead-results");

  const options = JSON.parse(typeahead.dataset.options);
  const MAX_RESULTS = 7;
  let activeIndex = -1;

  function highlightMatch(text, query) {
    const regex = new RegExp(`(${query})`, "ig");
    return text.replace(regex, `<mark>$1</mark>`);
  }

  function renderResults(matches, query) {
    resultsList.innerHTML = "";
    activeIndex = -1;

    matches.forEach((match, index) => {
      const li = document.createElement("li");
      li.classList.add("typeahead-result");
      li.setAttribute("data-index", index);

      li.innerHTML = `
        <span class="result-text">${highlightMatch(match, query)}</span>
        <span class="arrow-icon">â†—</span>
      `;

      resultsList.appendChild(li);

      li.addEventListener("click", () => {
        input.value = match;
        resultsList.innerHTML = "";
      });
    });
  }

  function updateActiveItem(direction) {
    const items = resultsList.querySelectorAll(".typeahead-result");
    if (items.length === 0) return;

    items.forEach(item => item.classList.remove("active"));

    activeIndex += direction;
    if (activeIndex < 0) activeIndex = items.length - 1;
    if (activeIndex >= items.length) activeIndex = 0;

    items[activeIndex].classList.add("active");
    items[activeIndex].scrollIntoView({ block: "nearest" });
  }

  input.addEventListener("input", () => {
    const query = input.value.trim();
    if (query.length === 0) {
      resultsList.innerHTML = "";
      return;
    }

    const matches = options
      .filter(option => option.toLowerCase().includes(query.toLowerCase()))
      .slice(0, MAX_RESULTS);

    renderResults(matches, query);
  });

  input.addEventListener("keydown", (e) => {
    const items = resultsList.querySelectorAll(".typeahead-result");

    if (e.key === "ArrowDown") {
      e.preventDefault();
      updateActiveItem(1);
    } else if (e.key === "ArrowUp") {
      e.preventDefault();
      updateActiveItem(-1);
    } else if (e.key === "Enter") {
      if (activeIndex >= 0 && items.length > 0) {
        e.preventDefault();
        input.value = items[activeIndex].textContent.trim();
        resultsList.innerHTML = "";
      }
    }
  });

  document.addEventListener("click", (e) => {
    if (!typeahead.contains(e.target)) {
      resultsList.innerHTML = "";
    }
  });
});
