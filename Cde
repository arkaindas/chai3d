    transition: color 0.4s ease;
    user-select: none;
  }

  .s3-switch-label.is-active { color: var(--gold); }

  /* The toggle button itself */
  .s3-switch {
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
    outline: none;
    -webkit-tap-highlight-color: transparent;
  }

  .s3-switch:focus-visible .s3-switch__track {
    box-shadow: 0 0 0 3px rgba(184,150,90,0.55);
  }

  /* Track — pill background */
  .s3-switch__track {
    display: block;
    position: relative;
    width: clamp(38px, 5.5vw, 54px);
    height: clamp(21px, 3vw, 29px);
    border-radius: 999px;
    background: rgba(247,243,236,0.18);
    border: 1px solid rgba(247,243,236,0.22);
    transition: background 0.4s ease, border-color 0.4s ease;
    cursor: pointer;
  }

  /* Thumb — sliding circle */
  .s3-switch__thumb {
    position: absolute;
    top: 50%;
    left: 3px;
    transform: translateY(-50%);
    width: clamp(15px, 2.2vw, 21px);
    height: clamp(15px, 2.2vw, 21px);
    border-radius: 50%;
    background: var(--cream);
    box-shadow: 0 1px 5px rgba(0,0,0,0.45);
    transition:
      left     0.4s cubic-bezier(0.4, 0, 0.2, 1),
      background 0.4s ease,
      width    0.15s ease;
  }

  /* Dark / ON state */
  .s3-switch.is-dark .s3-switch__track {
    background: rgba(80, 110, 180, 0.38);
    border-color: rgba(100, 140, 210, 0.5);
  }

  .s3-switch.is-dark .s3-switch__thumb {
    left: calc(100% - clamp(15px, 2.2vw, 21px) - 3px);
    background: #8aabdf;
  }

  /* Press squish */
  .s3-switch:active .s3-switch__thumb {
    width: clamp(19px, 2.8vw, 26px);
  }

  /* ── Mobile ──
     aspect-ratio ensures the section scales with
     the viewport width, so % positions stay accurate.
     clamp() stops the pill from clipping the edges.
  ── */
  @media (max-width: 600px) {
    .s3-switch-wrap {
      left: clamp(18%, var(--switch-left, 50%), 82%);
      top:  clamp(12%, var(--switch-top,  50%), 88%);
    }
    .s1-texts::before { display: none; }
    nav a:not(:first-child) { display: none; }
  }
