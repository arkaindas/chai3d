/* hide native checkbox */
.cmp-form-options__field--checkbox {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  width: 18px;
  height: 18px;
  border: 2px solid #999;
  border-radius: 50%;   /* <-- makes it round like radio */
  display: inline-block;
  position: relative;
  cursor: pointer;
  margin-right: 8px;
}

/* checked state - orange filled circle */
.cmp-form-options__field--checkbox:checked {
  border-color: #e46a1f; /* outer border color */
  background-color: #fff;
}

.cmp-form-options__field--checkbox:checked::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 8px;
  height: 8px;
  background: #e46a1f;
  border-radius: 50%;
  transform: translate(-50%, -50%);
}
