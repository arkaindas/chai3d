document.addEventListener("DOMContentLoaded", function () {
  const requiredWrappers = document.querySelectorAll('.text, .options');

  requiredWrappers.forEach(wrapper => {
    const requiredInputs = wrapper.querySelectorAll('[required]');

    requiredInputs.forEach(input => {
      const id = input.id;
      if (!id) return; // Skip if there's no ID

      const label = wrapper.querySelector(`label[for="${id}"]`);

      if (label && !label.querySelector('.required-indicator')) {
        const asterisk = document.createElement('span');
        asterisk.textContent = ' *';
        asterisk.className = 'required-indicator';
        asterisk.style.color = 'red';
        label.appendChild(asterisk);
      }
    });
  });
});
