    -webkit-backdrop-filter: blur(12px);
    border-radius: 999px;
    padding: clamp(0.4rem, 1vw, 0.65rem) clamp(0.7rem, 2vw, 1.1rem);
    white-space: nowrap;

    /* Hidden before GSAP animates it in */
    opacity: 0;
    visibility: hidden;
  }

  .s3-switch-label {
    font-family: 'Jost', sans-serif;
    font-size: clamp(0.55rem, 1.2vw, 0.7rem);
