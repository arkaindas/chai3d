<script>
gsap.registerPlugin(ScrollTrigger);

/* ─────────────────────────────────────────
   HELPER — live viewport height in px
───────────────────────────────────────── */
const vh = () => window.innerHeight;

/*
  SCROLL BUDGET  (inside 1300vh wrapper)
  ┌────────────────────────────────────────────┐
  │  0   – 400vh  → Scene 1  (sticky CSS)     │
  │  400 – 800vh  → Scene 2  (JS fixed)       │
  │  800 – 1200vh → Scene 3  (JS fixed)       │
  │  1200– 1300vh → end buffer                │
  └────────────────────────────────────────────┘
  As % of 1300vh wrapper:
  Scene 1 :  0%  –  30.8%
  Scene 2 : 30.8%–  61.5%
  Scene 3 : 61.5%–  92.3%
*/

/* ─────────────────────────────────────────
   INITIAL STATE
───────────────────────────────────────── */
gsap.set('#s1p1', { opacity: 1, y: 0 });

/* ─────────────────────────────────────────
   HEADER hide
───────────────────────────────────────── */
gsap.to('#site-header', {
  yPercent: -115,
  ease: 'power2.inOut',
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '1% top',
    end:   '3% top',
    scrub: 0.8,
  }
});

gsap.to('#scroll-hint', {
  autoAlpha: 0,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '1% top',
    end:   '2.5% top',
    scrub: true,
  }
});

/* ─────────────────────────────────────────
   SCENE 1 — Panel 1 out  (7% – 14%)
───────────────────────────────────────── */
gsap.to('#s1p1', {
  opacity: 0, y: -46,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '7% top',
    end:   '14% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────────────
   SCENE 1 — Panel 2 in  (13% – 20%)
───────────────────────────────────────── */
gsap.fromTo('#s1p2',
  { opacity: 0, y: 52 },
  {
    opacity: 1, y: 0,
    scrollTrigger: {
      trigger: '#scroll-wrapper',
      start: '13% top',
      end:   '20% top',
      scrub: 1,
    }
  }
);

/* ─────────────────────────────────────────
   SCENE 1 — Panel 2 out  (22% – 27%)
───────────────────────────────────────── */
gsap.to('#s1p2', {
  opacity: 0, y: -46,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '22% top',
    end:   '27% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────────────
   SCENE 1 — Banner exits upward  (27% – 31%)
───────────────────────────────────────── */
gsap.to('#s1-banner', {
  yPercent: -22,
  scale: 0.93,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '27% top',
    end:   '31% top',
    scrub: 1.2,
  }
});

gsap.to('#scene1', {
  autoAlpha: 0,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '29% top',
    end:   '31% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────────────
   SCENE 2 — JS manual sticky
   Active window: scrollY  4*vh → 8*vh
   (400vh – 800vh of wrapper)
───────────────────────────────────────── */
const s2el  = document.getElementById('scene2');
const video = document.getElementById('scene2-video');

let videoHasStarted = false;

function updateScene2() {
  const scrollY = window.scrollY;
  const s2Start = 4 * vh();
  const s2End   = 8 * vh();

  if (scrollY < s2Start) {
    s2el.style.position = 'absolute';
    s2el.style.top      = '400vh';
    s2el.style.bottom   = '';
    if (!video.paused) video.pause();
    videoHasStarted = false;

  } else if (scrollY >= s2Start && scrollY < s2End) {
    s2el.style.position = 'fixed';
    s2el.style.top      = '0';
    s2el.style.bottom   = '';
    if (video.paused) {
      if (!videoHasStarted) {
        video.currentTime = 0;
        videoHasStarted = true;
      }
      video.play().catch(() => {});
    }

  } else {
    s2el.style.position = 'absolute';
    s2el.style.top      = '';
    s2el.style.bottom   = '500vh'; /* 1300 - 800 = 500vh from bottom */
    if (!video.paused) video.pause();
  }
}

/* ─────────────────────────────────────────
   SCENE 2 — Panel A  (35% – 50%)
───────────────────────────────────────── */
gsap.fromTo('#s2p1',
  { opacity: 0, y: 48 },
  {
    opacity: 1, y: 0,
    scrollTrigger: {
      trigger: '#scroll-wrapper',
      start: '35% top',
      end:   '42% top',
      scrub: 1,
    }
  }
);

gsap.to('#s2p1', {
  opacity: 0, y: -46,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '44% top',
    end:   '50% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────────────
   SCENE 2 — Panel B  (52% – 61%)
───────────────────────────────────────── */
gsap.fromTo('#s2p2',
  { opacity: 0, y: 48 },
  {
    opacity: 1, y: 0,
    scrollTrigger: {
      trigger: '#scroll-wrapper',
      start: '52% top',
      end:   '57% top',
      scrub: 1,
    }
  }
);

gsap.to('#s2p2', {
  opacity: 0, y: -46,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '58% top',
    end:   '61% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────────────
   SCENE 3 — JS manual sticky
   Active window: scrollY  8*vh → 12*vh
   (800vh – 1200vh of wrapper)
───────────────────────────────────────── */
const s3el        = document.getElementById('scene3');
const s3SwitchWrap = document.getElementById('s3-switch-wrap');

let switchAnimated = false; // fire GSAP entrance only once

function updateScene3() {
  const scrollY = window.scrollY;
  const s3Start = 8  * vh();
  const s3End   = 12 * vh();

  if (scrollY < s3Start) {
    /* Before scene3 */
    s3el.style.position = 'absolute';
    s3el.style.top      = '800vh';
    s3el.style.bottom   = '';
    switchAnimated = false; // reset so it re-animates on re-entry

  } else if (scrollY >= s3Start && scrollY < s3End) {
    /* Scene3 active — pin to screen */
    s3el.style.position = 'fixed';
    s3el.style.top      = '0';
    s3el.style.bottom   = '';

    /* Animate switch in — fires only on first entry */
    if (!switchAnimated) {
      switchAnimated = true;
      gsap.fromTo('#s3-switch-wrap',
        {
          opacity:    0,
          scale:      0.5,
          y:          -20,
          visibility: 'visible',
        },
        {
          opacity:  1,
          scale:    1,
          y:        0,
          duration: 0.9,
          ease:     'back.out(1.6)',
          delay:    0.3,
        }
      );
    }

  } else {
    /* Past scene3 */
    s3el.style.position = 'absolute';
    s3el.style.top      = '';
    s3el.style.bottom   = '100vh'; /* 1300 - 1200 = 100vh buffer */
  }
}

/* ─────────────────────────────────────────
   SCENE 3 — Light / Dark switch logic
───────────────────────────────────────── */
const s3Switch     = document.getElementById('s3-switch');
const s3DarkVeil   = document.getElementById('s3-dark-veil');
const s3LabelLight = document.getElementById('s3-label-light');
const s3LabelDark  = document.getElementById('s3-label-dark');

let isDark = false;

s3LabelLight.classList.add('is-active');

function toggleLightDark() {
  isDark = !isDark;

  /* Fade veil in/out */
  s3DarkVeil.classList.toggle('is-dark', isDark);

  /* Slide thumb + track colour */
  s3Switch.classList.toggle('is-dark', isDark);

  /* ARIA */
  s3Switch.setAttribute('aria-checked', String(isDark));

  /* Labels */
  s3LabelLight.classList.toggle('is-active', !isDark);
  s3LabelDark.classList.toggle('is-active',   isDark);

  /*
    Optional: bounce the switch pill on toggle
    to give tactile feedback
  */
  gsap.fromTo('#s3-switch-wrap',
    { scale: 0.92 },
    { scale: 1, duration: 0.35, ease: 'back.out(2)' }
  );
}

s3Switch.addEventListener('click', toggleLightDark);

s3Switch.addEventListener('keydown', (e) => {
  if (e.key === ' ' || e.key === 'Enter') {
    e.preventDefault();
    toggleLightDark();
  }
});

/* ─────────────────────────────────────────
   BIND ALL SCROLL + RESIZE LISTENERS
───────────────────────────────────────── */
function onScroll() {
  updateScene2();
  updateScene3();
}

window.addEventListener('scroll', onScroll, { passive: true });

window.addEventListener('resize', () => {
  ScrollTrigger.refresh();
  updateScene2();
  updateScene3();
});

/* Run once on page load */
updateScene2();
updateScene3();
</script>
</body>
</html>
