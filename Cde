<script>
gsap.registerPlugin(ScrollTrigger);

/* ─────────────────────────────────────────
   HELPERS
───────────────────────────────────────── */
const vh = () => window.innerHeight;

/* ─────────────────────────────────────────
   INITIAL STATE
───────────────────────────────────────── */
gsap.set('#s1p1', { opacity: 1, y: 0 });

/* ─────────────────────────────────────────
   HEADER — hide on scroll
───────────────────────────────────────── */
gsap.to('#site-header', {
  yPercent: -115,
  ease: 'power2.inOut',
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '1% top',
    end:   '4% top',
    scrub: 0.8,
  }
});

gsap.to('#scroll-hint', {
  autoAlpha: 0,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '1% top',
    end:   '3% top',
    scrub: true,
  }
});

/* ─────────────────────────────────────────
   SCENE 1 — Panel 1 out
───────────────────────────────────────── */
gsap.to('#s1p1', {
  opacity: 0, y: -46,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '10% top',
    end:   '20% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────────────
   SCENE 1 — Panel 2 in
───────────────────────────────────────── */
gsap.fromTo('#s1p2',
  { opacity: 0, y: 52 },
  {
    opacity: 1, y: 0,
    scrollTrigger: {
      trigger: '#scroll-wrapper',
      start: '18% top',
      end:   '28% top',
      scrub: 1,
    }
  }
);

/* ─────────────────────────────────────────
   SCENE 1 — Panel 2 out
───────────────────────────────────────── */
gsap.to('#s1p2', {
  opacity: 0, y: -46,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '30% top',
    end:   '38% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────────────
   SCENE 1 — Banner exits upward
───────────────────────────────────────── */
gsap.to('#s1-banner', {
  yPercent: -22,
  scale: 0.93,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '36% top',
    end:   '44% top',
    scrub: 1.2,
  }
});

gsap.to('#scene1', {
  autoAlpha: 0,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '40% top',
    end:   '44% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────────────
   SCENE 2 — manual sticky via scroll listener
   Budget: scrollY  4*vh → 8*vh  (400vh–800vh)
───────────────────────────────────────── */
const s2el  = document.getElementById('scene2');
const video = document.getElementById('scene2-video');

function updateScene2() {
  const scrollY = window.scrollY;
  const start   = 4 * vh();   // 400vh in px
  const end     = 8 * vh();   // 800vh in px

  if (scrollY < start) {
    // Before scene2 — sit in normal document flow
    s2el.style.position = 'absolute';
    s2el.style.top      = '400vh';
    s2el.style.bottom   = '';
    video.pause();

  } else if (scrollY >= start && scrollY < end) {
    // Scene2 active — pin it to viewport
    s2el.style.position = 'fixed';
    s2el.style.top      = '0';
    s2el.style.bottom   = '';
    if (video.paused) {
      video.currentTime = 0;
      video.play().catch(() => {});
    }

  } else {
    // Past scene2 — anchor to bottom of wrapper
    s2el.style.position = 'absolute';
    s2el.style.top      = '';
    s2el.style.bottom   = '100vh';
    video.pause();
  }
}

window.addEventListener('scroll', updateScene2, { passive: true });
window.addEventListener('resize', () => {
  ScrollTrigger.refresh();
  updateScene2();
});
updateScene2();

/* ─────────────────────────────────────────
   SCENE 2 — Panel A in
───────────────────────────────────────── */
gsap.fromTo('#s2p1',
  { opacity: 0, y: 48 },
  {
    opacity: 1, y: 0,
    scrollTrigger: {
      trigger: '#scroll-wrapper',
      start: '48% top',
      end:   '58% top',
      scrub: 1,
    }
  }
);

/* ─────────────────────────────────────────
   SCENE 2 — Panel A out
───────────────────────────────────────── */
gsap.to('#s2p1', {
  opacity: 0, y: -46,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '60% top',
    end:   '68% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────────────
   SCENE 2 — Panel B in
───────────────────────────────────────── */
gsap.fromTo('#s2p2',
  { opacity: 0, y: 48 },
  {
    opacity: 1, y: 0,
    scrollTrigger: {
      trigger: '#scroll-wrapper',
      start: '70% top',
      end:   '78% top',
      scrub: 1,
    }
  }
);

/* ─────────────────────────────────────────
   SCENE 2 — Panel B out
───────────────────────────────────────── */
gsap.to('#s2p2', {
  opacity: 0, y: -46,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '80% top',
    end:   '87% top',
    scrub: 1,
  }
});
</script>
</body>
</html>
