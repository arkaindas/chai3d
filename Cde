    <script>
        // Optimized for below-the-fold content - lazy loading focused
        const banner = document.querySelector('.banner-container');
        const img = document.querySelector('.banner-bg');
        
        // Simple load handler - no rush since it's below the fold
        const handleLoad = () => {
            banner.classList.remove('loading');
            banner.classList.add('loaded');
        };
        
        // Check if already loaded (cached scenario)
        if (img.complete && img.naturalHeight !== 0) {
            handleLoad();
        } else {
            // Passive listeners - auto-cleanup with once: true
            img.addEventListener('load', handleLoad, { once: true, passive: true });
            img.addEventListener('error', handleLoad, { once: true, passive: true });
        }
        
        // Intersection Observer - loads content as user scrolls near
        if ('IntersectionObserver' in window) {
            // Use requestIdleCallback for non-blocking initialization
            const initObserver = () => {
                const observer = new IntersectionObserver(
                    (entries) => {
                        if (entries[0].isIntersecting) {
                            banner.classList.add('visible');
                            observer.disconnect(); // Clean up after triggering
                        }
                    },
                    { 
                        threshold: 0.1,
                        rootMargin: '100px' // Start loading 100px before it enters viewport
                    }
                );
                observer.observe(banner);
            };
            
            // Defer observer setup until browser is idle
            if ('requestIdleCallback' in window) {
                requestIdleCallback(initObserver, { timeout: 2000 });
            } else {
                // Fallback for browsers without requestIdleCallback
                setTimeout(initObserver, 100);
            }
        } else {
            // Fallback: just show it immediately if no IntersectionObserver
            banner.classList.add('visible');
        }
    </script>
