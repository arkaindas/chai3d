<div class="typeahead-component" data-options='["Electric grid", "Electric vehicle", "Electric charging stations", "Electric zones", "Electric vehicles", "Electric scooter", "Electricity market"]'>
  <div class="input-wrapper">
    <span class="search-icon">üîç</span>
    <input type="text" class="typeahead-input" placeholder="Search..." />
  </div>
  <ul class="typeahead-results"></ul>
</div>

document.addEventListener("DOMContentLoaded", () => {
  const typeahead = document.querySelector(".typeahead-component");
  const input = typeahead.querySelector(".typeahead-input");
  const resultsList = typeahead.querySelector(".typeahead-results");

  const options = JSON.parse(typeahead.dataset.options);
  const MAX_RESULTS = 7;
  let activeIndex = -1;

  function renderResults(matches) {
    resultsList.innerHTML = "";
    activeIndex = -1;

    matches.forEach((match, index) => {
      const li = document.createElement("li");
      li.classList.add("typeahead-result");
      li.setAttribute("data-index", index);
      li.innerHTML = `<span class="result-text">${match}</span><span class="arrow-icon">‚Üó</span>`;
      resultsList.appendChild(li);

      li.addEventListener("click", () => {
        input.value = match;
        resultsList.innerHTML = "";
      });
    });
  }

  function updateActiveItem(direction) {
    const items = resultsList.querySelectorAll(".typeahead-result");
    if (items.length === 0) return;

    items.forEach(item => item.classList.remove("active"));

    activeIndex += direction;
    if (activeIndex < 0) activeIndex = items.length - 1;
    if (activeIndex >= items.length) activeIndex = 0;

    items[activeIndex].classList.add("active");
    items[activeIndex].scrollIntoView({ block: "nearest" });
  }

  input.addEventListener("input", () => {
    const query = input.value.trim().toLowerCase();
    resultsList.innerHTML = "";

    if (query.length === 0) return;

    const matches = options
      .filter(option => option.toLowerCase().includes(query))
      .slice(0, MAX_RESULTS);

    renderResults(matches);
  });

  input.addEventListener("keydown", (e) => {
    const items = resultsList.querySelectorAll(".typeahead-result");

    if (e.key === "ArrowDown") {
      e.preventDefault();
      updateActiveItem(1);
    } else if (e.key === "ArrowUp") {
      e.preventDefault();
      updateActiveItem(-1);
    } else if (e.key === "Enter") {
      if (activeIndex >= 0 && items.length > 0) {
        e.preventDefault();
        input.value = items[activeIndex].textContent.trim();
        resultsList.innerHTML = "";
      }
    }
  });

  document.addEventListener("click", (e) => {
    if (!typeahead.contains(e.target)) {
      resultsList.innerHTML = "";
    }
  });
});


.typeahead-component {
  width: 100%;
  max-width: 400px;
  position: relative;
  font-family: Arial, sans-serif;

  .input-wrapper {
    position: relative;

    .search-icon {
      position: absolute;
      left: 10px;
      top: 50%;
      transform: translateY(-50%);
      color: #333;
      font-size: 18px;
    }

    .typeahead-input {
      width: 100%;
      padding: 10px 12px 10px 35px;
      font-size: 16px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
  }

  .typeahead-results {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: white;
    border: 1px solid #ccc;
    border-top: none;
    list-style: none;
    margin: 0;
    padding: 0;
    z-index: 1000;

    .typeahead-result {
      display: flex;
      justify-content: space-between;
      padding: 10px;
      cursor: pointer;
      border-top: 1px solid #eee;

      &:hover,
      &.active {
        background-color: #f5f5f5;
      }

      .arrow-icon {
        font-size: 16px;
        color: #666;
      }

      .result-text {
        flex: 1;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    }
  }
}
