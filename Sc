<script>
gsap.registerPlugin(ScrollTrigger);

const vh = () => window.innerHeight;

/* ─────────────────────────────────────────
   INITIAL STATES
───────────────────────────────────────── */
gsap.set('#s1p1', { opacity: 1, y: 0 });

/* ─────────────────────────────────────────
   HEADER hide
───────────────────────────────────────── */
gsap.to('#site-header', {
  yPercent: -115,
  ease: 'power2.inOut',
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '1% top',
    end:   '3% top',
    scrub: 0.8,
  }
});

gsap.to('#scroll-hint', {
  autoAlpha: 0,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '1% top',
    end:   '2.5% top',
    scrub: true,
  }
});

/* ─────────────────────────────────────────
   SCENE 1 — Panel 1 out
───────────────────────────────────────── */
gsap.to('#s1p1', {
  opacity: 0, y: -46,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '7% top',
    end:   '14% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────────────
   SCENE 1 — Panel 2 in
───────────────────────────────────────── */
gsap.fromTo('#s1p2',
  { opacity: 0, y: 52 },
  {
    opacity: 1, y: 0,
    scrollTrigger: {
      trigger: '#scroll-wrapper',
      start: '13% top',
      end:   '20% top',
      scrub: 1,
    }
  }
);

/* ─────────────────────────────────────────
   SCENE 1 — Panel 2 out
───────────────────────────────────────── */
gsap.to('#s1p2', {
  opacity: 0, y: -46,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '22% top',
    end:   '27% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────────────
   SCENE 1 — Banner exits upward
───────────────────────────────────────── */
gsap.to('#s1-banner', {
  yPercent: -22,
  scale: 0.93,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '27% top',
    end:   '31% top',
    scrub: 1.2,
  }
});

gsap.to('#scene1', {
  autoAlpha: 0,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '29% top',
    end:   '31% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────────────
   SCENE 2 — JS manual sticky
   Active: scrollY  4*vh → 8*vh  (400–800vh)
───────────────────────────────────────── */
const s2el       = document.getElementById('scene2');
const video      = document.getElementById('scene2-video');
const progressBar = document.getElementById('s2-progress-bar');

function updateScene2() {
  const scrollY = window.scrollY;
  const s2Start = 4 * vh();
  const s2End   = 8 * vh();

  if (scrollY < s2Start) {
    /* Before scene2 */
    s2el.style.position = 'absolute';
    s2el.style.top      = '400vh';
    s2el.style.bottom   = '';

  } else if (scrollY >= s2Start && scrollY < s2End) {
    /* Scene2 active — pin to screen */
    s2el.style.position = 'fixed';
    s2el.style.top      = '0';
    s2el.style.bottom   = '';

    /*
      SCROLL-SCRUB VIDEO
      ─────────────────
      progress = 0 at start of scene2, 1 at end.
      We map that 0→1 to video.currentTime 0→duration.
      Scrolling forward = video plays forward.
      Scrolling backward = video rewinds.
    */
    if (video.readyState >= 2 && video.duration) {
      const progress        = (scrollY - s2Start) / (s2End - s2Start);
      const clampedProgress = Math.min(Math.max(progress, 0), 1);
      video.currentTime     = clampedProgress * video.duration;
      progressBar.style.width = (clampedProgress * 100) + '%';
    }

  } else {
    /* Past scene2 */
    s2el.style.position = 'absolute';
    s2el.style.top      = '';
    s2el.style.bottom   = '100vh';

    /* Hold video at last frame */
    if (video.readyState >= 2 && video.duration) {
      video.currentTime = video.duration;
      progressBar.style.width = '100%';
    }
  }
}

/* ─────────────────────────────────────────
   SCENE 2 — Panel A  (35% – 50%)
───────────────────────────────────────── */
gsap.fromTo('#s2p1',
  { opacity: 0, y: 48 },
  {
    opacity: 1, y: 0,
    scrollTrigger: {
      trigger: '#scroll-wrapper',
      start: '35% top',
      end:   '42% top',
      scrub: 1,
    }
  }
);

gsap.to('#s2p1', {
  opacity: 0, y: -46,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '44% top',
    end:   '50% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────────────
   SCENE 2 — Panel B  (52% – 61%)
───────────────────────────────────────── */
gsap.fromTo('#s2p2',
  { opacity: 0, y: 48 },
  {
    opacity: 1, y: 0,
    scrollTrigger: {
      trigger: '#scroll-wrapper',
      start: '52% top',
      end:   '57% top',
      scrub: 1,
    }
  }
);

gsap.to('#s2p2', {
  opacity: 0, y: -46,
  scrollTrigger: {
    trigger: '#scroll-wrapper',
    start: '58% top',
    end:   '62% top',
    scrub: 1,
  }
});

/* ─────────────────────────────────────────
   SCENE 3 — IntersectionObserver
   Triggers GSAP entrance when image scrolls
   into the viewport after scene2 ends.
───────────────────────────────────────── */
const s3el         = document.getElementById('scene3');
const s3SwitchWrap = document.getElementById('s3-switch-wrap');

const s3Observer = new IntersectionObserver(
  (entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        /* Animate switch in */
        gsap.fromTo('#s3-switch-wrap',
          { opacity: 0, scale: 0.5, y: -20, visibility: 'visible' },
          { opacity: 1, scale: 1,   y: 0,
            duration: 0.9,
            ease: 'back.out(1.6)',
            delay: 0.4,
          }
        );
        s3Observer.unobserve(s3el); /* fire once */
      }
    });
  },
  { threshold: 0.3 } /* fire when 30% of scene3 is visible */
);

s3Observer.observe(s3el);

/* ─────────────────────────────────────────
   SCENE 3 — Light / Dark toggle
───────────────────────────────────────── */
const s3Switch     = document.getElementById('s3-switch');
const s3DarkVeil   = document.getElementById('s3-dark-veil');
const s3LabelLight = document.getElementById('s3-label-light');
const s3LabelDark  = document.getElementById('s3-label-dark');

let isDark = false;
s3LabelLight.classList.add('is-active');

function toggleLightDark() {
  isDark = !isDark;

  s3DarkVeil.classList.toggle('is-dark', isDark);
  s3Switch.classList.toggle('is-dark', isDark);
  s3Switch.setAttribute('aria-checked', String(isDark));
  s3LabelLight.classList.toggle('is-active', !isDark);
  s3LabelDark.classList.toggle('is-active',   isDark);

  /* Bounce feedback on toggle */
  gsap.fromTo('#s3-switch-wrap',
    { scale: 0.92 },
    { scale: 1, duration: 0.35, ease: 'back.out(2)' }
  );
}

s3Switch.addEventListener('click', toggleLightDark);
s3Switch.addEventListener('keydown', (e) => {
  if (e.key === ' ' || e.key === 'Enter') {
    e.preventDefault();
    toggleLightDark();
  }
});

/* ─────────────────────────────────────────
   BIND SCROLL + RESIZE
───────────────────────────────────────── */
window.addEventListener('scroll', updateScene2, { passive: true });

window.addEventListener('resize', () => {
  ScrollTrigger.refresh();
  updateScene2();
});

updateScene2();
</script>
</body>
</html>
